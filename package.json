{
  "name": "trystero-monorepo",
  "version": "0.23.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build && pnpm build:bundles",
    "build:bundles": "rolldown -c rolldown.config.ts",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "find-proxy": "jiti scripts/find-proxy.ts",
    "get-bundle-sizes": "node scripts/get-bundle-sizes.ts",
    "typecheck": "pnpm -r typecheck && tsc -p tsconfig.json --noEmit",
    "test": "NO_MINIFY=1 pnpm build && playwright test ./test",
    "test:node": "pnpm run build && jiti ./test/node/node.spec.ts",
    "test:ice": "pnpm run build && jiti scripts/test-ice.ts",
    "test:proxy": "PROXY=$(jiti scripts/find-proxy.ts) pnpm test",
    "test:relays": "pnpm run build && jiti scripts/test-relays.ts",
    "lint": "oxlint --type-aware --type-check .",
    "lint:fix": "oxlint --type-aware --type-check . --fix",
    "format": "oxfmt --check .",
    "format:write": "oxfmt ."
  },
  "dependencies": {
    "@trystero/core": "workspace:*",
    "@trystero/firebase": "workspace:*",
    "@trystero/ipfs": "workspace:*",
    "@trystero/mqtt": "workspace:*",
    "@trystero/nostr": "workspace:*",
    "@trystero/supabase": "workspace:*",
    "@trystero/torrent": "workspace:*",
    "trystero": "workspace:*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.3.0",
    "chalk": "^5.6.2",
    "jiti": "^2.6.1",
    "mqtt": "^5.15.0",
    "oxfmt": "^0.34.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.2",
    "playwright": "^1.58.2",
    "rolldown": "1.0.0-rc.1",
    "serve": "^14.2.5",
    "source-map": "^0.7.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "werift": "^0.22.9",
    "ws": "^8.19.0"
  },
  "packageManager": "pnpm@10.4.0"
}
